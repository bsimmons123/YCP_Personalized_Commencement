<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
	<servlet>
    <servlet-name>NewInformationServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.personalized_commencement.servlet.NewInformationServlet</servlet-class>
  	</servlet>
  	<servlet>
    <servlet-name>UpdateInformationServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.personalized_commencement.servlet.UpdateInformationServlet</servlet-class>
  	</servlet>
  	<servlet>
    <servlet-name>DeleteInformationServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.personalized_commencement.servlet.DeleteInformationServlet</servlet-class>
  	</servlet>
  	<servlet>
    <servlet-name>StudentIndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.personalized_commencement.servlet.StudentIndexServlet</servlet-class>
  	</servlet>
  	<servlet>
    <servlet-name>AdvisorIndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.personalized_commencement.servlet.AdvisorIndexServlet</servlet-class>
  	</servlet>
  	<servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.personalized_commencement.servlet.LoginServlet</servlet-class>
  	</servlet>
  	<servlet>
  	<servlet-name>StudentLoginServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.personalized_commencement.servlet.StudentLoginServlet</servlet-class>
  	</servlet>
  	<servlet>
  	<servlet-name>AdvisorLoginServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.personalized_commencement.servlet.AdvisorLoginServlet</servlet-class>
  	</servlet>
  
  <!-- AJAX servlets. -->
	<servlet>
	<servlet-name>DeleteInformationAjaxServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.personalized_commencement.servlet.ajax.DeleteInformationAjaxServlet</servlet-class>
	</servlet>
	<servlet>
	<servlet-name>NewInformationAjaxServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.personalized_commencement.servlet.ajax.NewInformationAjaxServlet</servlet-class>
	</servlet>
	<servlet>
	<servlet-name>UpdateInformationAjaxServlet</servlet-name>
	<servlet-class>edu.ycp.cs320.personalized_commencement.servlet.ajax.UpdateInformationAjaxServlet</servlet-class>
	</servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StudentIndexServlet</servlet-name>
    <url-pattern>/student_index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdvisorIndexServlet</servlet-name>
    <url-pattern>/advisor_index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NewInformationServlet</servlet-name>
    <url-pattern>/new</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateInformationServlet</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteInformationServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>StudentLoginServlet</servlet-name>
  	<url-pattern>/student_login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AdvisorLoginServlet</servlet-name>
  	<url-pattern>/advisor_login</url-pattern>
  </servlet-mapping>
  
  <!--  AJAX servlet mappings. -->
  <welcome-file-list>
    <welcome-file>studentindex.html</welcome-file>
  </welcome-file-list>
  <welcome-file-list>
    <welcome-file>advisorindex.html</welcome-file>
  </welcome-file-list>
</web-app>
